{
	"resource_group": {
		"name": "WUS_LAB_1",
		"location": "northeurope"
	},
	"virtual_network": {
		"name": "VNet",
		"address_prefix": "10.0.0.0/16"
	},
	"public_ips": [
		{
			"name": "FrontendIP",
			"version": "IPv4"
		}
	],
	"security_groups": [
		{
			"name": "FrontendNSG",
			"rules": [
				{
					"name": "Rule1",
					"priority": 100,
					"access": "Allow",
					"protocol": "Tcp",
					"source": {
						"address_prefixes": "'*'",
						"port_ranges": "'*'"
					},
					"destination": {
						"address_prefixes": "'*'",
						"port_ranges": "'*'"
					}
				}
			]
		},
		{
			"name": "BackendNSG",
			"rules": [
				{
					"name": "Rule1",
					"priority": 100,
					"access": "Allow",
					"protocol": "Tcp",
					"source": {
						"address_prefixes": "'*'",
						"port_ranges": "'*'"
					},
					"destination": {
						"address_prefixes": "'*'",
						"port_ranges": "'*'"
					}
				}
			]
		},
		{
			"name": "BDNSG",
			"rules": [
				{
					"name": "Rule1",
					"priority": 100,
					"access": "Allow",
					"protocol": "Tcp",
					"source": {
						"address_prefixes": "'*'",
						"port_ranges": "'*'"
					},
					"destination": {
						"address_prefixes": "'*'",
						"port_ranges": "'*'"
					}
				}
			]
		}
	],
	"subnets": [
		{
			"name": "SubnetFront",
			"address_prefixes": "10.0.1.0/24",
			"network_security_group_name": "FrontendNSG"
		},
		{
			"name": "SubnetBack",
			"address_prefixes": "10.0.2.0/24",
			"network_security_group_name": "BackendNSG"
		},
		{
			"name": "SubnetDB",
			"address_prefixes": "10.0.3.0/24",
			"network_security_group_name": "BDNSG"
		}
	],
	"virtual_machines": [
		{
			"name": "Frontend",
			"image": "UbuntuLTS",
			"subnet": "SubnetFront",
			"ip_address": {
				"public": "FrontendIP",
				"private": "10.0.1.4"
			},
			"size": "Standard_B2s",
			"params": [
				{
					"name": "proxy_ip",
					"value": "",
					"command": "get_public_ip.sh"
				},
				{
					"name": "proxy_port",
					"value": "9001"
				},
				{
					"name": "frontend_port",
					"value": "9000"
				},
				{
					"name": "backend_ip",
					"value": "10.0.2.5"
				},
				{
					"name": "backend_port",
					"value": "9000"
				}
			]
		},
		{
			"name": "Backend",
			"image": "UbuntuLTS",
			"subnet": "SubnetBack",
			"ip_address": {
				"public": "",
				"private": "10.0.2.5"
			},
			"size": "Standard_B1s",
			"params": [
				{
					"name": "database_ip",
					"value": "10.0.3.6"
				},
				{
					"name": "database_port",
					"value": "3306"
				},
				{
					"name": "backend_port",
					"value": "9000"
				}
			]
		},
		{
			"name": "DB",
			"image": "UbuntuLTS",
			"subnet": "SubnetDB",
			"ip_address": {
				"public": "",
				"private": "10.0.3.6"
			},
			"size": "Standard_B1s",
			"params": [
				{
					"name": "database_port",
					"value": "3306"
				}
			]
		}
	]
}
